@{
    ViewData["Title"] = "Home Page"; // Establece el título de la página que se mostrará en la pestaña del navegador
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Metadatos esenciales para la página -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title> <!-- Título de la página dinámico -->
    
    <!-- Incluye Bootstrap CSS desde un CDN para estilos responsivos y predefinidos -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    
    <!-- Estilos personalizados para la página -->
    <style>
        /* Estilos personalizados para la página */
        body {
            background-color: #8493bd; /* Color de fondo de la página */
            font-family: 'Poppins', sans-serif; /* Fuente personalizada para todo el cuerpo */
        }
        .carousel-item img {
            height: 400px; /* Altura fija para las imágenes del carrusel */
            object-fit: cover; /* Asegura que las imágenes cubran completamente el área sin distorsionarse */
        }
        .welcome-container {
            padding: 50px 0; /* Espaciado vertical para el contenedor de bienvenida */
            text-align: center; /* Centra el texto dentro del contenedor */
            margin-bottom: 30px; /* Reduce el margen inferior para acercar al siguiente elemento */
        }
        .service-carousel .carousel-item img {
            height: 200px; /* Altura fija para las imágenes del carrusel de servicios */
            object-fit: cover; /* Asegura que las imágenes cubran completamente el área sin distorsionarse */
        }
        .service-carousel .carousel-item .btn {
            margin-top: 10px; /* Espaciado superior para los botones en el carrusel de servicios */
        }
        .service-item {
            text-align: center; /* Centra el contenido de cada elemento de servicio */
        }
        .description-box {
            background-color: rgb(226, 216, 216); /* Fondo blanco para el cuadro de descripción */
            padding: 20px; /* Espaciado interno para el cuadro */
            margin: 10px auto; /* Márgenes automáticos para centrar el cuadro */
            max-width: 800px; /* Ancho máximo del cuadro */
            border-radius: 10px; /* Bordes redondeados para el cuadro */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Sombra para el cuadro */
            text-align: justify; /* Texto justificado */
        }
    </style>
</head>
<body>

    <!-- Sección principal del carrusel -->
    <div id="mainCarousel" class="carousel slide" data-ride="carousel" data-interval="5000" data-pause="hover">
        <!-- Indicadores para el carrusel (los puntos en la parte inferior) -->
        <ol class="carousel-indicators">
            <li data-target="#mainCarousel" data-slide-to="0" class="active" aria-label="Slide 1"></li>
            <li data-target="#mainCarousel" data-slide-to="1" aria-label="Slide 2"></li>
            <li data-target="#mainCarousel" data-slide-to="2" aria-label="Slide 3"></li>
        </ol>
        <!-- Contenedor para las diapositivas del carrusel -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <!-- Imagen de la primera diapositiva -->
                <img src="/img/toy1.jpg" class="d-block w-100" alt="Slide 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Título del Slide 1</h5>
                    <p>Descripción del contenido de la primera diapositiva.</p>
                </div>
            </div>
            <div class="carousel-item">
                <!-- Imagen de la segunda diapositiva -->
                <img src="/img/toy2.jpg" class="d-block w-100" alt="Slide 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Título del Slide 2</h5>
                    <p>Descripción del contenido de la segunda diapositiva.</p>
                </div>
            </div>
            <div class="carousel-item">
                <!-- Imagen de la tercera diapositiva -->
                <img src="/img/toy1.jpg" class="d-block w-100" alt="Slide 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Título del Slide 3</h5>
                    <p>Descripción del contenido de la tercera diapositiva.</p>
                </div>
            </div>
        </div>
        <!-- Controles para navegar entre las diapositivas del carrusel -->
        <a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Siguiente</span>
        </a>
    </div>

    <!-- Contenedor de bienvenida con una breve descripción y carrusel de servicios -->
    <div class="welcome-container">
        <h1 class="display-4">Welcome to JB & GED Service </h1> <!-- Título principal de bienvenida -->
    
    <!-- Cuadro de descripción con texto justificado -->
<div class="description-box">
    <p>
        Bong Spec is dedicated to providing high-quality clothing and fabric services to our customers. 
        We specialize in both import and export, ensuring that you have access to the best products available 
        globally. Our commitment to quality and customer satisfaction drives everything we do, from sourcing 
        the finest materials to delivering outstanding service.
    </p>
</div>
<!-- Agregamos tres cuadros con opciones -->
<div class="row">
    <div class="col-md-4 service-item d-flex">
        <a href="/products" class="w-100">
            <div class="p-3 border bg-light d-flex flex-column justify-content-between h-100">
                <!-- Imagen para el cuadro de productos -->
                <img src="/img/img2.jpeg" class="img-fluid mb-3" alt="Our Products">
                <div>
                    <h5>Kvalitet</h5>
                    <p>Vi strävar efter att erbjuda högkvalitativa tjänster i varje projekt, uppmärksamma detaljer och använda material och tekniker av högsta kvalitet.</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4 service-item d-flex">
        <a href="/services" class="w-100">
            <div class="p-3 border bg-light d-flex flex-column justify-content-between h-100">
                <!-- Imagen para el cuadro de servicios -->
                <img src="/img/img3.jpeg" class="img-fluid mb-3" alt="Our Services">
                <div>
                    <h5>Integritet</h5>
                    <p>Vi agerar med ärlighet och transparens i alla våra interaktioner, vilket bygger förtroendefulla relationer med våra kunder och samarbetspartners.</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4 service-item d-flex">
        <a href="/contact" class="w-100">
            <div class="p-3 border bg-light d-flex flex-column justify-content-between h-100">
                <!-- Imagen para el cuadro de contacto -->
                <img src="/img/img4.jpeg" class="img-fluid mb-3" alt="Contact Us">
                <div>
                    <h5>Engagemang</h5>
                    <p>Vi är dedikerade till att uppfylla våra åtaganden och leverera resultat som överträffar våra kunders förväntningar.</p>
                </div>
            </div>
        </a>
    </div>
</div>


    <!-- Archivos JavaScript necesarios para el funcionamiento de Bootstrap y los carruseles -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
