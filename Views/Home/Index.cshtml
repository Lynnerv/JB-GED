@{
    ViewData["Title"] = "Home Page"; // Establece el título de la página que se mostrará en la pestaña del navegador
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Metadatos esenciales para la página -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title> <!-- Título de la página dinámico -->
    
    <!-- Incluye Bootstrap CSS desde un CDN para estilos responsivos y predefinidos -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    
    <!-- Estilos personalizados para la página -->
    <style>
        body {
            background-color: #8493bd; /* Color de fondo de la página */
            font-family: 'Poppins', sans-serif; /* Fuente personalizada para todo el cuerpo */
        }
        .carousel-item img {
            height: 400px; /* Altura fija para las imágenes del carrusel */
            object-fit: cover; /* Asegura que las imágenes cubran completamente el área sin distorsionarse */
        }
        .welcome-container {
            padding: 50px 0; /* Espaciado vertical para el contenedor de bienvenida */
            text-align: center; /* Centra el texto dentro del contenedor */
        }
        .service-carousel .carousel-item img {
            height: 200px; /* Altura fija para las imágenes del carrusel de servicios */
            object-fit: cover; /* Asegura que las imágenes cubran completamente el área sin distorsionarse */
        }
        .service-carousel .carousel-item .btn {
            margin-top: 10px; /* Espaciado superior para los botones en el carrusel de servicios */
        }
        .service-item {
            text-align: center; /* Centra el contenido de cada elemento de servicio */
        }
    </style>
</head>
<body>

    <!-- Sección principal del carrusel -->
<div id="mainCarousel" class="carousel slide" data-ride="carousel" data-interval="5000" data-pause="hover">
    <!-- Indicadores para el carrusel (los puntos en la parte inferior) -->
    <ol class="carousel-indicators">
        <li data-target="#mainCarousel" data-slide-to="0" class="active" aria-label="Slide 1"></li>
        <li data-target="#mainCarousel" data-slide-to="1" aria-label="Slide 2"></li>
        <li data-target="#mainCarousel" data-slide-to="2" aria-label="Slide 3"></li>
    </ol>
    <!-- Contenedor para las diapositivas del carrusel -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <!-- Imagen de la primera diapositiva -->
            <img src="https://via.placeholder.com/1200x400?text=Slide+1" class="d-block w-100" alt="Slide 1">
            <div class="carousel-caption d-none d-md-block">
                <h5>Título del Slide 1</h5>
                <p>Descripción del contenido de la primera diapositiva.</p>
            </div>
        </div>
        <div class="carousel-item">
            <!-- Imagen de la segunda diapositiva -->
            <img src="https://via.placeholder.com/1200x400?text=Slide+2" class="d-block w-100" alt="Slide 2">
            <div class="carousel-caption d-none d-md-block">
                <h5>Título del Slide 2</h5>
                <p>Descripción del contenido de la segunda diapositiva.</p>
            </div>
        </div>
        <div class="carousel-item">
            <!-- Imagen de la tercera diapositiva -->
            <img src="https://via.placeholder.com/1200x400?text=Slide+3" class="d-block w-100" alt="Slide 3">
            <div class="carousel-caption d-none d-md-block">
                <h5>Título del Slide 3</h5>
                <p>Descripción del contenido de la tercera diapositiva.</p>
            </div>
        </div>
    </div>
    <!-- Controles para navegar entre las diapositivas del carrusel -->
    <a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Siguiente</span>
    </a>
</div>


    <!-- Contenedor de bienvenida con una breve descripción y carrusel de servicios -->
    <div class="welcome-container">
        <h1 class="display-4">Welcome to Bong Spec</h1> <!-- Título principal de bienvenida -->
        <p>We offer a wide range of clothing and fabric services.</p> <!-- Descripción breve de los servicios ofrecidos -->

        <!-- Carrusel para mostrar los servicios ofrecidos -->
        <div id="serviceCarousel" class="carousel slide service-carousel" data-ride="carousel">
            <!-- Indicadores para el carrusel de servicios -->
            <ol class="carousel-indicators">
                <li data-target="#serviceCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#serviceCarousel" data-slide-to="1"></li>
                <li data-target="#serviceCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Contenedor para las diapositivas del carrusel de servicios -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <!-- Primer servicio con imagen, título y botón para más información -->
                    <div class="service-item">
                        <img src="https://via.placeholder.com/400x200?text=Service+1" class="d-block w-100" alt="...">
                        <h5>Service 1</h5>
                        <button class="btn btn-primary" onclick="window.location.href='/service1'">Learn More</button>
                    </div>
                </div>
                <div class="carousel-item">
                    <!-- Segundo servicio con imagen, título y botón para más información -->
                    <div class="service-item">
                        <img src="https://via.placeholder.com/400x200?text=Service+2" class="d-block w-100" alt="...">
                        <h5>Service 2</h5>
                        <button class="btn btn-primary" onclick="window.location.href='/service2'">Learn More</button>
                    </div>
                </div>
                <div class="carousel-item">
                    <!-- Tercer servicio con imagen, título y botón para más información -->
                    <div class="service-item">
                        <img src="https://via.placeholder.com/400x200?text=Service+3" class="d-block w-100" alt="...">
                        <h5>Service 3</h5>
                        <button class="btn btn-primary" onclick="window.location.href='/service3'">Learn More</button>
                    </div>
                </div>
            </div>
            <!-- Controles para navegar entre los servicios del carrusel -->
            <a class="carousel-control-prev" href="#serviceCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#serviceCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!-- Archivos JavaScript necesarios para el funcionamiento de Bootstrap y los carruseles -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
